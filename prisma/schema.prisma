generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  tag       String   @unique
  clanTag  String
  name      String
  role      String
  lastSeen  String
  createdAt DateTime @default(now())

  @@map("players")
}

model RiverRaceParticipant {
  tag            String   @unique
  clanTag       String
  name           String
  fame           Int
  decksUsed      Int
  decksUsedToday Int
  missingAttacks Int
  isInClan Boolean @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())

  @@map("river_race_participants")
}
